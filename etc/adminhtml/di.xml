<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Crypto\MagentoToken\Ui\Form\Button\Save"
                 type="Magento\Backend\Ui\Component\Control\SaveSplitButton">
        <arguments>
            <argument name="targetName" xsi:type="string">tokenbalance_form.tokenbalance_form</argument>
        </arguments>
    </virtualType>

    <virtualType name="Crypto\MagentoToken\Ui\Form\Button\Delete"
                 type="Magento\Backend\Ui\Component\Control\DeleteButton">
        <arguments>
            <argument name="confirmationMessage" xsi:type="string" translatable="true">
                Are you sure you want to delete this balance?
            </argument>
            <argument name="idFieldName" xsi:type="const">
                Crypto\MagentoToken\Api\Data\TokenBalanceInterface::TOKEN_BALANCE_ID
            </argument>
            <argument name="deleteRoutePath" xsi:type="string">*/*/delete</argument>
            <argument name="sortOrder" xsi:type="number">30</argument>
        </arguments>
    </virtualType>
</config>
